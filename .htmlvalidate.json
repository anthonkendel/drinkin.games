{
	"plugins": ["html-validate-vue"],
	"extends": ["htmlvalidate:recommended", "html-validate-vue:recommended"],
	"elements": ["html5"],
	"transform": {
		"^.*\\.vue$": "html-validate-vue"
	},
	"rules": {
		"attr-case": ["error", { "style": "camelcase" }],
		"element-case": "off",
		"element-name": "off",
		"void": [
			"error",
			{
				"style": "selfclose"
			}
		]
	}
}
